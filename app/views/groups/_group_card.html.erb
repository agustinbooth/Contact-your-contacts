<div class="card" style="width: 18rem;">

  <div class="card-header">
    <h6 class="card-title">
      <%= link_to group.group_name, group %>    
        <span>
          <%= link_to group, class: "btn btn-link btn-sm text-muted" do %>
          <i class="bi bi-person-plus-fill"></i></i>
          <% end %>

          <%= link_to edit_group_path(group), class: "btn btn-link btn-sm text-muted" do %>
            <i class="bi bi-pencil-fill"></i>
          <% end %>

          <%= link_to group, method: :delete, class: "btn btn-link btn-sm text-muted" do %>
            <i class="bi bi-trash-fill"></i>
          <% end %>
        </span>
    </h6>
  </div>

  <div>
    <details >
      <summary> Show contacts </summary>
      <ul class="list-group list-group-flush">
        <% group.contacts.each do |contact|%>
        <li class="list-group-item"><%= link_to "#{contact.name} #{contact.last_name}", contact%> uses <%= contact.communication_channel%> <span class="badge float-right"> <i class="bi bi-trash-fill"></i> </span></li>
        <%end%>
      </ul>
    </details>
  </div>
</div>  